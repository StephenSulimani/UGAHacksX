generator client {
  provider = "prisma-client-js"
  output = "../../node_modules/@prisma-app/client"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  address String @id @map("_id") @db.ObjectId
  articles Article[]
}

model Article {
    cid String @id @map("_id") @db.ObjectId
    userAddress String @map("user_address") @db.ObjectId
    user User? @relation(fields: [userAddress], references: [address])
}
